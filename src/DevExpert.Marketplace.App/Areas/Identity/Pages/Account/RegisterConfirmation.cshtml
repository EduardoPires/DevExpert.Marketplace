@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Confirmação de registro";
}

<div class="container">
    <h3 class="row justify-content-center">@ViewData["Title"]</h3>
</div>
<hr/>

<div class="container">
    @{
        if (@Model.DisplayConfirmAccountLink)
        {
            <p>
                Este aplicativo não tem um remetente de e-mail real registrado no momento, veja <a
                    href="https://aka.ms/aspaccountconf">estes documentos</a> para saber como configurar um remetente de
                e-mail real.
                Normalmente, isso seria enviado por e-mail: <a id="confirm-link" href="@Model.EmailConfirmationUrl">Clique
                    aqui para confirmar sua conta</a>
            </p>
        }
        else
        {
            <p>
                Verifique seu e-mail para confirmar sua conta.
            </p>
        }
    }
</div>