@model List<DevExpert.Marketplace.Application.ViewModels.OutputViewModels.CategoryOutputViewModel>

<!-- Filter Button -->
<div class="d-flex justify-content-start">
  <button type="button" class="btn-filter" data-bs-toggle="modal" data-bs-target="#filterModal">
    <i class="bi bi-sliders"></i> <span>Filtrar</span>
  </button>
</div>

<!-- Filter Modal -->
<div class="modal fade" id="filterModal" tabindex="-1" aria-labelledby="filterModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="filterModalLabel">Filter</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <!-- Search Box -->
        <div class="input-group mb-3">
          <span class="input-group-text" id="search-icon"><i class="bi bi-search"></i></span>
          <input type="text" class="form-control" placeholder="Search" aria-label="Search">
        </div>

        <!-- Categories -->
        <h6>Categories</h6>
        <div class="row">
          @foreach (var category in Model)
          {
            <div class="col-6 mb-2">
              <div class="form-check">
                <input class="form-check-input" type="checkbox" value="@Html.DisplayNameFor(x => category.Name)" id="@category.Id">
                <label class="form-check-label" for="@Html.DisplayNameFor(x => category.Name)">@Html.DisplayNameFor(x => category.Name)</label>
              </div>
            </div>
          }
        </div>

        <!-- Buttons -->
        <div class="d-flex justify-content-between">
          <button type="button" class="btn btn-outline-secondary">Reset</button>
          <button type="button" class="btn btn-primary">Apply Filter</button>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Bootstrap 5 JavaScript -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
