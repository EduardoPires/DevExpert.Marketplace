@model List<DevExpert.Marketplace.Application.ViewModels.OutputViewModels.CategoryOutputViewModel>

<!-- Filter Button -->
<div class="d-flex justify-content-start">
  <button type="button" class="btn-filter" data-bs-toggle="modal" data-bs-target="#filterModal">
    <i class="bi bi-sliders"></i> <span>Filtrar</span>
  </button>
</div>

<!-- Filter Modal -->
<div class="modal fade" id="filterModal" tabindex="-1" aria-labelledby="filterModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="filterModalLabel">Filtrar</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">

        <form method="get" action="/lista-de-produtos" id="filterForm">
          <!-- Categories -->
          <h6>Categories</h6>
          <div class="row">
            @foreach (var category in Model)
            {
              <div class="col-6 mb-2">
                <div class="form-check">
                  <input class="form-check-input" type="checkbox" name="categories" value="@category.Id" id="@category.Id">
                  <label class="form-check-label" for="@category.Id">@category.Name</label>
                </div>
              </div>
            }
          </div>

          <!-- Buttons -->
          <div class="d-flex justify-content-between mt-3">
            <button type="button" class="btn btn-outline-secondary" id="clearButton">Limpar</button>
            <button type="submit" class="btn btn-primary">Aplicar</button>
          </div>
        </form>

      </div>
    </div>
  </div>
</div>

<!-- JavaScript para limpar os checkboxes -->
<script>
  document.getElementById('clearButton').addEventListener('click', function () {
    const checkboxes = document.querySelectorAll('#filterForm .form-check-input');
    checkboxes.forEach(checkbox => checkbox.checked = false);
  });
</script>
